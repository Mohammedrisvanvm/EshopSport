      <div class="page-wrapper">
        <div class="container-fluid">
          <div class="row page-titles">
            <div class="col-md-5 align-self-center">
              <h3 class="text-themecolor">product</h3>
              <ol class="breadcrumb">
                <li class="breadcrumb-item">
                  <a href="javascript:void(0)">Home</a>
                </li>
                <li class="breadcrumb-item active">product</li>
              </ol>
            </div>
          </div>
        </div>

        <a href="/admin/addProduct"
          ><button class="btn btn-primary">add product</button></a
        >

        <section>
          <table class="table table-hover">
            <thead>
              <tr>
                <th scope="col">number</th>
                <th scope="col">name</th>
                <th scope="col">category</th>
                <th scope="col">quantity</th>
                <th scope="col">MRP</th>
                <th scope="col">price</th>
                <th scope="col">mainImage</th>
                <th scope="col">list</th>
                <th scope="col">account created date</th>
                <th scope="col">edit/delete</th>
              </tr>
            </thead>
            <tbody>
              <% productinfo.forEach((i,index) => { %>
              <tr>
                <td scope="row"><%- index+1 %></td>
                <td><%-i.productName %></td>
                <td><%- i.category %></td>
                <td><%- i.quantity %></td>
                <td><%- i.MRP %></td>
                <td><%- i.price %></td>
                <td>
                  <img
                    src="/image/productImage/<%- i.mainImage[0].filename %>"
                    width="40"
                    height="26"
                  />
                </td>

                <td>
                  <button
                    class="btn btn-success btn-sm"
                    id="listbtn<%-i._id %>"
                    onclick="unlist(`<%-i._id %>`)"
                  >
                    <%-i.list %>
                  </button>
                </td>
                <td><%- i.uploadedAt.toLocaleString() %></td>
                <td class="d-flex">
                  <a href="/admin/editproduct/<%-i._id %>">
                    <i class="ri-pencil-line mx-2 fs-4 text-dark"></i></a
                  ><a href="/admin/deleteproduct/<%-i._id %>"
                    ><i
                      class="ri-delete-bin-6-fill fs-4 mx-3 text-danger"
                      onclick="return confirm('are you sure you want to delete?')"
                    ></i
                  ></a>
                </td>
              </tr>
              <% }) %>
            </tbody>
          </table>
        </section>

        <div class="d-flex justify-content-center">
          <a href="/admin/logout"
            ><button class="btn btn-sm btn-primary">LOGOUT</button></a
          >
        </div>
        <footer class="footer">
          © 2023 eshopsport by
          <a href="/views/adminPages/adminHome.ejs">eshopsport.com</a>
        </footer>
      </div>
