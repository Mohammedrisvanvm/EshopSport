                <th scope="col">mainImage</th>
                <th scope="col">list</th>

                <th scope="col">delete</th>
              </tr>
            </thead>
            <tbody>
              <% banner.forEach((bannerItem, index) => { %>
              <tr id="Doc<%- bannerItem._id %>">
                <td><%- index + 1 %></td>
                <td><%- bannerItem.Name %></td>
                <td>
                  <img
                    src="/image/carousel image/<%- bannerItem.mainImage[0].filename %>"
                    width="40"
                    height="26"
                  />
                </td>
                <td>
                  <button
                    class="btn btn-success btn-sm"
                    id="listbtn<%-bannerItem._id %>"
                    onclick="list(`<%-bannerItem._id %>`)"
                    value="<%-bannerItem.list %>"
                  >
                    <%-bannerItem.list %>
                  </button>
                </td>
                <td>
                  <button
                    type="button"
                    class="btn btn-primary btn-sm me-1 mb-2"
                    data-mdb-toggle="tooltip"
                    title="Remove item"
                    onclick="return confirm('are you sure you want to delete?'),deleteBanner('<%- bannerItem.filename %>','<%- bannerItem._id %>')"
                  >
                    <i class="fas fa-trash"></i>
                  </button>
                </td>
              </tr>
              <% }); %>
            </tbody>
          </table>
