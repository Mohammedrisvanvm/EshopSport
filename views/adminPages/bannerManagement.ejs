    <script>
      function deleteBanner(data, pId) {
        console.log("22222", data, pId);
        axios
          .get(`/admin/deleteBanner?data=${data}&pId=${pId}`)
          .then((result) => {
            if (result.data.success) {
              window.location.reload();
            }
          });
      }
      function list(data) {
        console.log(1);
        let value = document.getElementById("listbtn" + data);
        axios.get(`/admin/listBanner?id=${data}`).then((response) => {
          if (response.data.success == true) {
            value.textContent = "true";
          } else {
            value.textContent = "false";
          }
        });
      }
    </script>
