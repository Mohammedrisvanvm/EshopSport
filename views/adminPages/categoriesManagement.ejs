    <script>
      function unlist(data) {
        axios.get("/admin/categoryunlist/" + data).then((result) => {
          let value = document.getElementById("listbtn" + data);

          if (result.data.success == true) {
            value.textContent = "false";
          } else {
            value.textContent = "true";
          }
        });
      }
    </script>

