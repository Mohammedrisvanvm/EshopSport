        <div>
          <table class="display" id="myTable">
            <thead>
              <tr>
                <th scope="col">number</th>
                <th scope="col">name</th>
                <th scope="col">email</th>
                <th scope="col">ban</th>
                <th scope="col">account created date</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <% userinfo.forEach((i,index) => { %>
                <th scope="row"><%- index+1 %></th>
                <td><%-i.name %></td>
                <td><%- i.email %></td>
                <td>
                  <button
                    class="btn btn-success"
                    value=" <%- i.ban %>"
                    id="ban<%-i._id %>"
                    onclick="userban(`<%-i._id %>`)"
                  >
                    <%- i.ban %>
                  </button>
                </td>

                <td><%- i.date.toLocaleDateString() %></td>
              </tr>
              <% }) %>
            </tbody>
