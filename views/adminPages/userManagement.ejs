    <script>
      function userban(data) {
        let value = document.getElementById("ban" + data);

        axios.get(`/admin/userban/` + data).then((result) => {
          if (result.data.success == true) {
            value.textContent = "true";
            console.log("false");
          } else {
            value.textContent = "false";
            console.log("true");
          }
        });
      }
    </script>
