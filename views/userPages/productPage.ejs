    <script>
      var options = {
        width: 500,
        height: 550,
        zoomWidth: 400,
        offset: { vertical: 0, horizontal: 10 },
        scale: 0.5,
      };

      var img = document.getElementById("image-zoom");
      new ImageZoom(img, options);
    </script>
