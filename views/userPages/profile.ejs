    <section class="h-100 gradient-custom-2">
      <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
          <div class="col col-lg-9 col-xl-7">
            <div class="card">
              <div
                class="rounded-top text-white d-flex flex-row"
                style="background-color: #000; height: 200px"
              >
                <div class="ms-4 mt-5 d-flex flex-column" style="width: 150px">
                  <img
                    src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-profiles/avatar-1.webp"
                    alt="Generic placeholder image"
                    class="img-fluid img-thumbnail mt-4 mb-2"
                    style="width: 150px; z-index: 1"
                  />
                </div>

                <div class="ms-3" style="margin-top: 130px">
                  <h5 class="text-light"><%-userinfo.name %></h5>
                  <p>malappuram</p>
                 
                </div>
              </div>
              <button
                type="button"
                class="btn btn-primary"
                data-bs-toggle="modal"
                data-bs-target="#exampleModal"
              >
                add address
              </button>
              <div class="p-4 text-black" style="background-color: #f8f9fa">
                <span>Wallet Amount Bal : ₹ <span class="text-success"><%-userinfo.wallet %></span></span>
                <div class="d-flex justify-content-end text-center py-1"></div>
              </div>
              <% useraddress.address.forEach((i,index) => { %>
              <div
                class="card-body p-4 text-black"
                id="deletefromaddress<%-i._id %>"
              >
                <div class="mb-5" i>
                  <p class="lead fw-normal mb-1">address <%-index+1 %></p>

                  <div class="d-flex" id="deletefromaddress<%-i._id %>">
                    <p>
                      <%- i.address %>
                      <br />
                      <%- i.country %>
                      <br />
                      <%- i.state %>
                      <br />
                      <%- i.pincode %>
                    </p>
                  </div>
                  <!-- <a href="/editprofile/"><button
                    type="button"
                    class="btn"
                    data-bs-toggle="modal"
                    data-bs-target="#exampleModal"
                  >
                    <i
                      title="edit address"
                      class="ri-pencil-line fs-4 text-dark"
                    ></i>
                  </button></a> -->
                  <button
                    type="button"
                    onclick=" deletefromaddress(`<%-i._id %>`,`del`)"
                    class="btn"
                  >
                    <i
                      title="delete address"
                      class="ri-delete-bin-6-fill fs-4 text-danger"
                    ></i>
                  </button>
                </div>
                <hr />
                <% }) %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
    <footer
    class="text-center text-white mt-4"
    style="background-color: #607d8b"
  >
    <hr class="text-dark" />

    <div class="container" style="height: 50px">
